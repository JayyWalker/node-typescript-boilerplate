{
  "name": "node-typescript-boilerplate",
  "author": "Jordan Walker <jayywalker@users.noreply.github.com>",
  "license": "MIT",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 20.14 <21"
  },
  "volta": {
    "node": "20.14.0",
    "pnpm": "9.1.3"
  },
  "scripts": {
    "start": "node .build/src/main.js",
    "dev": "tsx ./src/main.ts",
    "lint": "eslint . --ext .ts --ext .mts --ignore-pattern src/*.test.ts",
    "lint:test": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "clean": "rimraf coverage .build tmp",
    "transpile": "tsc -p tsconfig.json",
    "transpile:watch": "tsc -w -p tsconfig.json",
    "transpile:release": "tsc -p tsconfig.release.json",
    "build": "run-s lint clean transpile",
    "build:watch": "run-s lint clean transpile:watch",
    "build:release": "run-s lint clean transpile:release",
    "jest": "jest",
    "test:unit": "run-s lint:test jest -- --coverage",
    "test:watch": "npm run test:unit -- --watch",
    "test:integration": "run-s lint:test jest --config jest.config.integration.js",
    "test:e2e": "run-s lint:test jest -- --config jest.config.e2e.js"
  },
  "dependencies": {
    "tslib": "~2.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "~7.11.0",
    "@typescript-eslint/parser": "~7.11.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "~5.0.7",
    "ts-api-utils": "~1.3.0",
    "ts-jest": "~29.1.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  }
}
