{
  "name": "node-typescript-boilerplate",
  "author": "Jordan Walker <jayywalker@users.noreply.github.com>",
  "license": "MIT",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "type": "module",
  "engines": {
    "node": ">= 20.14 <21"
  },
  "volta": {
    "node": "20.14.0",
    "pnpm": "9.1.3"
  },
  "scripts": {
    "start": "node .build/src/main.js",
    "dev": "tsx ./src/main.ts",
    "lint": "eslint . --ext .ts --ext .mts --ignore-pattern src/*.test.ts",
    "lint:test": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc",
    "prettier:fix": "pnpm run prettier --write .",
    "prettier:check": "pnpm run prettier --debug-check",
    "clean": "rimraf coverage .build tmp",
    "transpile": "tsc -p tsconfig.json",
    "transpile:watch": "tsc -w -p tsconfig.json",
    "transpile:release": "tsc -p tsconfig.release.json",
    "build": "run-s lint clean transpile",
    "build:watch": "run-s lint clean transpile:watch",
    "build:release": "run-s lint clean transpile:release",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "pnpm run test:run src",
    "test:integration": "pnpm run test:run integration",
    "test:e2e": "pnpm run test:run  e2e"
  },
  "dependencies": {
    "tslib": "~2.6.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "~7.11.0",
    "@typescript-eslint/parser": "~7.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "~5.0.7",
    "ts-api-utils": "~1.3.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
